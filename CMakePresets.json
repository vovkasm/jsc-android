{
    "version": 5,
    "configurePresets": [
        {
            "name": "android-arm64",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/android-arm64",
            "cacheVariables": {
                "CMAKE_SYSTEM_NAME": "Android",
                "CMAKE_SYSTEM_VERSION": "21",
                "CMAKE_ANDROID_ARCH_ABI": "arm64-v8a",
                "CMAKE_ANDROID_STL_TYPE": "c++_shared"
            }
        }
    ]
}